{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Test shared state schema",
  "type": "object",
  "properties": {
    "answers": {
      "type": "array",
      "items": {
        "type": "object",
        "patternProperties": {
          ".*": {
            "type": "number"
          }
        }
      }
    },
    "scores": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "number"
        }
      }
    },
    "currentQuestionNumber": {
      "type": "number"
    },
    "currentQuestionStart": {
      "type": "number"
    },
    "currentQuestionOrder": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "phase": {
      "type": "string",
      "pattern": "^(preparing)|(question)|(review)|(scores)|(finalscores)$"
    }
  },
  "required": [
    "answers",
    "scores",
    "phase",
    "currentQuestionNumber",
    "currentQuestionStart",
    "currentQuestionOrder"
  ]
}
